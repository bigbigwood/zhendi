<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>

    <sectionGroup name="DeviceConfigGroup">
      <section name="Device1Config" type="Rld.DeviceSystem.DeviceAdapter.ZDC2911.Configuration.DeviceTcpConfiguration, Rld.DeviceSystem.DeviceAdapter.ZDC2911" />
      <section name="Device2Config" type="Rld.DeviceSystem.DeviceAdapter.ZDC2911.Configuration.DeviceTcpConfiguration, Rld.DeviceSystem.DeviceAdapter.ZDC2911" />
    </sectionGroup>
  </configSections>

  <DeviceConfigGroup>
    <Device1Config DeviceId="1" DeviceName="d1" Password="0" DeviceModel="ZDC2911" ConnectionModel="5" IpAddress="192.168.31.73" Port="5500" />
    <Device2Config DeviceId="2" DeviceName="d2" Password="0" DeviceModel="ZDC2911" ConnectionModel="5" IpAddress="192.168.31.73" Port="5500" />
  </DeviceConfigGroup>

  <!--log4net config-->
  <log4net>
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %C{1}] - %message%newline"/>
      </layout>
    </appender>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="./logs/log.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Composite"/>
      <datePattern value="yyyyMMdd"/>
      <staticLogFileName value="true"/>
      <maximumFileSize value="50MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date] [%level] [%thread] [%C{1}] - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="TraceAppender"/>
      <appender-ref ref="RollingFile"/>
    </root>
  </log4net>

  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>
</configuration>