                <Border Style="{StaticResource GrayBorderStyle}" Name="B58" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B59" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B60"  />
            </UniformGrid>
            <UniformGrid Rows="1" Margin="2,0">
                <Border Style="{StaticResource GrayBorderStyle}" Name="B61"  />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B62" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B63" />
