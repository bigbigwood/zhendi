            </UniformGrid>
            <UniformGrid Rows="1" Margin="2,0">
                <Border Style="{StaticResource GrayBorderStyle}" Name="B67"  />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B68" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B69" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B70" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B71" />
                <Border Style="{StaticResource GrayBorderStyle}" Name="B72"  />
            </UniformGrid>
        </UniformGrid>
    </Grid>
</UserControl>