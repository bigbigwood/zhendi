<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="Rld.Acs.Repository.Mybatis.MsSql" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://ibatis.apache.org/mapping">

  <alias>
    <typeAlias alias="UserRole" type="Rld.Acs.Model.UserRole" />
  </alias>

  <resultMaps>
    <resultMap id="UserRoleResult" class="Rld.Acs.Model.UserRole">
      <result property="SysUserRoleID" column="SysUserRoleID"/>
      <result property="UserID" column="UserID"/>
      <result property="RoleID" column="RoleID"/>
    </resultMap>
  </resultMaps>

  <statements>
    <select id="UserRole.GetByKey" parameterClass="int" resultMap="UserRoleResult">
      SELECT *
      FROM [SYS_USER_ROLE]
      WHERE
      [SysUserRoleID] = #value#
    </select>

    <insert id="UserRole.Insert" parameterClass="UserRole">
      INSERT INTO [SYS_USER_ROLE] (
      [UserID]
      , [RoleID]
      ) VALUES (
      #UserID#
      , #RoleID#
      )
      <selectKey resultClass="int" type="post" property="SysUserRoleID" >
        select @@IDENTITY as value
      </selectKey>
    </insert>

    <update id="UserRole.Update" parameterClass="UserRole">
      UPDATE [SYS_USER_ROLE] SET
      [UserID] = #UserID#
      , [RoleID] = #RoleID#
      WHERE
      [SysUserRoleID] = #SysUserRoleID#
    </update>

    <delete id="UserRole.Delete"  parameterClass="int">
      DELETE FROM [SYS_USER_ROLE]
      WHERE
      [SysUserRoleID] = #SysUserRoleID#
    </delete>

    <select id="UserRole.Query" parameterClass="Hashtable" resultMap="UserRoleResult">
      SELECT *
      FROM SYS_USER_ROLE
      <dynamic prepend="WHERE">
      <isNotNull prepend="and" property="UserID">
        UserID=#UserID#
      </isNotNull>
        <isNotNull prepend="and" property="RoleID">
          RoleID=#RoleID#
        </isNotNull>
    </dynamic>
    </select>
  </statements>
</sqlMap>
