<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="Rld.Acs.Repository.Mybatis.MsSql" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://ibatis.apache.org/mapping">

  <alias>
    <typeAlias alias="DeviceRolePermission" type="Rld.Acs.Model.DeviceRolePermission" />
  </alias>

  <resultMaps>
    <resultMap id="DeviceRolePermissionResult" class="Rld.Acs.Model.DeviceRolePermission">
      <result property="DeviceRolePermissionID" column="DeviceRolePermissionID"/>
      <result property="DeviceRoleID" column="DeviceRoleID"/>
      <result property="DevicePermissionID" column="DevicePermissionID"/>
    </resultMap>
      <resultMap id="DevicePermissionResult" class="Rld.Acs.Model.DevicePermission">
      <result property="DevicePermissionID" column="DevicePermissionID"/>
      <result property="Enable" column="Enable"/>
      <result property="Remark" column="Remark"/>
      <result property="PermissionAction" column="PermissionAction"/>
      <result property="UserGroupVM" column="UserGroupVM"/>
      <result property="AccessTimeZone" column="AccessTimeZone"/>
      <result property="STARTDATE" column="STARTDATE"/>
      <result property="Enddate" column="Enddate"/>
      <result property="Device" column="DeviceID" select="DeviceController.GetByKey"/>
    </resultMap>
  </resultMaps>

  <statements>
    <select id="DeviceRolePermission.GetByKey" parameterClass="int" resultMap="DeviceRolePermissionResult">
      SELECT *
      FROM [DEVICE_ROLES_PERMISSIONS]
      WHERE
      [DeviceRolePermissionID] = #value#
    </select>
    <select id="DeviceRolePermission.GetByDeviceRole" parameterClass="int" resultMap="DeviceRolePermissionResult">
      SELECT *
      FROM [DEVICE_ROLES_PERMISSIONS]
      WHERE
      [DeviceRoleID] = #DeviceRoleID#
    </select>
    <select id="DeviceRolePermission.GetByDevicePermission" parameterClass="int" resultMap="DeviceRolePermissionResult">
      SELECT *
      FROM [DEVICE_ROLES_PERMISSIONS]
      WHERE
      [DevicePermissionID] = #DevicePermissionID#
    </select>
    <select id="DeviceRolePermission.GetRolesByPermissionID" parameterClass="int" resultMap="DeviceRoleResult">
      SELECT DR.*
      FROM [DEVICE_ROLES_PERMISSIONS] DRP
      LEFT JOIN DEVICE_ROLES DR ON DRP.DeviceRoleID = DR.DeviceRoleID
      WHERE
      DRP.DevicePermissionID = #DevicePermissionID#
    </select>
    <select id="DeviceRolePermission.GetPermissionsByRoleID" parameterClass="int" resultMap="DevicePermissionResult">
      SELECT DP.*
      FROM [DEVICE_ROLES_PERMISSIONS] DRP
      LEFT JOIN DEVICE_PERMISSIONS DP ON DRP.DevicePermissionID = DP.DevicePermissionID
      WHERE
      DRP.DeviceRoleID = #DeviceRoleID#
    </select>

    <insert id="DeviceRolePermission.Insert" parameterClass="DeviceRolePermission">
      INSERT INTO [DEVICE_ROLES_PERMISSIONS] (
      [DeviceRoleID]
      , [DevicePermissionID]
      ) VALUES (
      #DeviceRoleID#
      , #DevicePermissionID#
      )
      <selectKey resultClass="int" type="post" property="DeviceRolePermissionID" >
        select @@IDENTITY as value
      </selectKey>
    </insert>

    <update id="DeviceRolePermission.Update" parameterClass="DeviceRolePermission">
      UPDATE [DEVICE_ROLES_PERMISSIONS] SET
      [DeviceRoleID] = #DeviceRoleID#
      , [DevicePermissionID] = #DevicePermissionID#
      WHERE
      [DeviceRolePermissionID] = #DeviceRolePermissionID#
    </update>

    <delete id="DeviceRolePermission.Delete"  parameterClass="int">
      DELETE FROM [DEVICE_ROLES_PERMISSIONS]
      WHERE
      [DeviceRolePermissionID] = #DeviceRolePermissionID#
    </delete>

    <select id="DeviceRolePermission.Query" parameterClass="Hashtable" resultMap="DeviceRolePermissionResult">
      SELECT *
      FROM DEVICE_ROLES_PERMISSIONS
    </select>
  </statements>
</sqlMap>
